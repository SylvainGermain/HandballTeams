{
  "name": "handball-teams",
  "version": "1.0.0",
  "description": "A handball teams management application",
  "main": "src/main.ts",
  "scripts": {
    "build": "webpack --mode=production",
    "build:static": "npm run build && npm run copy:static",
    "copy:static": "node scripts/copy-static.js",
    "dev": "webpack --mode=development",
    "start": "webpack serve --mode=development --open --hot",
    "start:dev": "webpack serve --mode=development --open --hot --live-reload",
    "watch": "webpack --mode=development --watch",
    "serve:static": "cd static && python -m http.server 8080"
  },
  "keywords": ["handball", "teams", "sports"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "typescript": "^5.1.0",
    "ts-loader": "^9.4.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
